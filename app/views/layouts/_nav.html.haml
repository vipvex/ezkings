.ui.menu.stackable
  .ui.container
    %a.item{:href => marketplace_path}
      = image_tag 'logo.png'
    = link_to "#", class: 'ui item link' do |f|
      %i.home.icon
      Home
    = link_to marketplace_path, class: 'ui item link' do |f|
      %i.grid.layout.icon
      Marketplace
    .ui.dropdown.simple.item
      More
      %i.dropdown.icon
      .menu
        - Page.all.each do |p|
          = link_to(p.name, "/p/#{p.url}", class: 'item')
        = link_to('Contact Us', "", class: 'item')
    .ui.dropdown.simple.item
      Checklists
      %i.dropdown.icon
      .menu
        - Checklist.all.each do |p|
          = link_to(p.name, "/checklists/#{p.url}", class: 'item')
    - if current_user
      .ui.dropdown.simple.right.item
        = current_user.email
        %i.dropdown.icon
        .menu
          %a.item{:href => "#"} Setting
          = link_to('Logout', destroy_user_session_path, method: :delete, class: 'item')
    - else
      .right.menu
        .item
          = link_to('Log-in', new_user_session_path, class: 'ui primary button')
        .item
          = link_to('Sign Up', new_user_registration_path, class: 'ui green button')
    .ui.item
      = link_to current_user ? cart_path : new_user_session_path do
        %i.icon.shop
        Cart (#{current_user ? current_user.cart.cart_items.count : 0})
        
        
          