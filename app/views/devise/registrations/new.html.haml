.ui.middle.aligned.center.aligned.grid#login
  .column
  
    - if notice
      %p.alert.alert-success= notice
    - if alert
      %p.alert.alert-danger= alert

  
    %h2.ui.image.header
      = image_tag 'logo.jpg', class: 'ui image'
      .content
        
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .ui.stacked.secondary.segment
        .field
          .ui.left.icon.input.fluid
            %i.user.icon
            = f.email_field :email, autofocus: true, placeholder: 'Email'
        .field
          .ui.left.icon.input.fluid
            %i.lock.icon
            = f.password_field :password, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)"
        .field
          .ui.left.icon.input.fluid
            %i.lock.icon
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation'
        = f.submit 'Login', class: 'ui fluid large teal submit button'
          
    .ui.message
      New to us?
      = render "devise/shared/links"
