.column

  = image_tag 'logo.png', class: 'ui image large'  
  
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .ui.stacked.secondary.segment
      - if notice || alert
        .ui.message.container
          %i.close.icon
          .header
            = notice || alert

      .field
        .ui.left.icon.input.fluid
          %i.user.icon
          = f.email_field :email, autofocus: true, placeholder: 'Email'
      .field
        .ui.left.icon.input.fluid
          %i.lock.icon
          = f.password_field :password, autocomplete: "off", placeholder: 'Password'
      .field.ui.left.aligned
        - if devise_mapping.rememberable?
          .ui.toggle.checkbox
            = f.check_box :remember_me
            = f.label :remember_me
      = f.submit 'Login', class: 'ui fluid large blue submit button'
        
  .ui.message
    New to us?
    = render "devise/shared/links"
