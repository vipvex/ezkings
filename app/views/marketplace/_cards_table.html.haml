%table.ui.celled.padded.table
  %thead
    %tr
      %th.single.line Name
      %th Player
      %th Team
      %th Price
      %th Quantity
  %tbody
    - @cards.each do |card|
      %tr
        %td.selectable= link_to card.name, card 
        %td.selectable= link_to card.player_name, card
        %td.selectable= link_to card.teams.first.name, card
        %td.selectable= link_to card.price, card
        %td.selectable= link_to card.available, card