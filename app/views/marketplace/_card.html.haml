.card
  =link_to card, class: 'image' do |c|
    =image_tag 'card_placeholder.jpg'
  .content
    .header= card.name
    .meta
      %a New | 5 Available
    %span.right.floated
      = card.year
    %span
      %i.cost.icon
      $#{card.price}
  .extra.content
    .ui.two.buttons
      = link_to card, class: 'ui basic blue button' do |c|
        View
      .ui.basic.green.button Buy
      