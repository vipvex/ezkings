.ui.grid.full-height
  .four.wide.column.full-height
    .ui.segment.full-height
      .ui.form
        .ui.search
          .ui.icon.input.fluid
            %input.prompt{:placeholder => "Search...", :type => "text"}/
            %i.search.icon
          .results
        %h5 Attributes
        - @attributes.each do |attribute|
          .inline.field
            .ui.checkbox
              %input.hidden{:tabindex => "0", :type => "checkbox"}/
              %label #{attribute.name} (143)
        %h5 Players
        - @players.each do |player|
          .inline.field
            .ui.checkbox
              %input.hidden{:tabindex => "0", :type => "checkbox"}/
              %label #{player.name} (143)
        %h5 Teams
        - @teams.each do |team|
          .inline.field
            .ui.checkbox
              %input.hidden{:tabindex => "0", :type => "checkbox"}/
              %label #{team.name} (143)
        %h5 Manufactureres
        - @card_manufactureres.each do |card_manufacturer|
          .inline.field
            .ui.checkbox
              %input.hidden{:tabindex => "0", :type => "checkbox"}/
              %label #{card_manufacturer.name} (143)
    
      
      
  .twelve.wide.column.full-height
    .ui.segment.marketplace.full-height
      .ui.form
        .fields.right.aligned
          .field.inline.four.wide
            %label Sort
            .ui.selection.dropdown
              %input{:name => "gender", :type => "hidden"}/
              %i.dropdown.icon
              .default.text View
              .menu
                .item{"data-value" => "1"} Newest
                .item{"data-value" => "0"} Price LOW
                .item{"data-value" => "0"} Price Hight
          .field.inline.four.wide
            %label View
            .ui.selection.dropdown
              %input{:name => "gender", :type => "hidden"}/
              %i.dropdown.icon
              .default.text View
              .menu
                .item{"data-value" => "1"} List
                .item{"data-value" => "0"} Thumb
                .item{"data-value" => "0"} Text
      .ui.link.four.cards.stackable
        - @cards.each do |card|
          = render 'card', card: card