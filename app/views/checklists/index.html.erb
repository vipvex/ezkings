<p id="notice"><%= notice %></p>

<h1 class="ui header centered"> Checklists</h1>

<% if current_user && current_user.admin? %>
  <table class="ui table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Content</th>
        <th>Order</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @checklists.each do |checklist| %>
        <tr>
          <td><%= checklist.name %></td>
          <td><%= checklist.content.truncate(100, omission: ' ...') %></td>
          <td><%= checklist.order %></td>
          <td><%= checklist.url %></td>
          <td><%= link_to 'Show', checklist %></td>
          <td><%= link_to 'Edit', edit_checklist_path(checklist) %></td>
          <td><%= link_to 'Destroy', checklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Checklist', new_checklist_path %>
<% else %>

  <% @checklists.each do |checklist| %>
  
    <%= link_to "checklists/#{checklist.url}" do %>
      <h3> <%= checklist.name %></h3>
    <% end %>
  
  <% end %>

<% end %>