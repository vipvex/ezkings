.ui.form
  = form_for(@page) do |f|
    - if @page.errors.any?
      #error_explanation
        %h2
          = pluralize(@page.errors.count, "error")
          prohibited this page from being saved:
        %ul
          - @page.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :url
      = f.text_field :url
    .field
      = f.text_area :content
    .field
      = f.label :order
      = f.number_field :order
    .field
      = f.label :show
      = f.check_box :show
    .actions
      = f.submit
  
