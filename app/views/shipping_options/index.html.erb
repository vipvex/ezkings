<p id="notice"><%= notice %></p>

<h1>Listing Shipping Options</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipping_options.each do |shipping_option| %>
      <tr>
        <td><%= shipping_option.name %></td>
        <td><%= shipping_option.price %></td>
        <td><%= shipping_option.order %></td>
        <td><%= link_to 'Show', shipping_option %></td>
        <td><%= link_to 'Edit', edit_shipping_option_path(shipping_option) %></td>
        <td><%= link_to 'Destroy', shipping_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

